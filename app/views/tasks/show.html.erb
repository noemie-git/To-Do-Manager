<div class="task-container">
  <h1><%= @task.title %></h1>
  <br>
  <p>Details: <%= @task.details %></p>
  <br>
  <p>Completed:
    <% if @task.completed %>
      <i class="fa fa-check-square-o"></i>
    <% else %>
      <i class="fa fa-square-o"></i>
    <% end %>
  </p>
</div>

<div class="links">
  <p><%= link_to "ğŸ“„ Edit task", edit_task_path(@task) %></p>

  <p><%= link_to "ğŸ—‘ Delete task", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></p>

  <p><%= link_to "Back to tasks overview", tasks_path %></p>
</div>
